{
    "name": "@dxworks/illustry-server",
    "version": "0.0.0",
    "description": "A hub for visualizing data about software systems",
    "keywords": [
        "dxworks",
        "illustry",
        "visualisations",
        "charts"
    ],
    "license": "Apache-2.0",
    "author": "Vladimir Nitu",
    "main": "dist/index.js",
    "scripts": {
        "build": "npm run clean && tsc && npm run copy-files",
        "clean": "rimraf dist/ *.tsbuildinfo",
        "copy-files": "copyfiles -a -u 2 src/static/* src/static/*/* dist/static && copyfiles -a -u 2 src/docs/* src/docs/*/* dist/docs",
        "dev": "nodemon dist/src/app.ts",
        "start": "tsc && node dist/src/app.js",
        "test:unit": "cucumber-js -p default --exit",
        "generate:json-schema": "typescript-json-schema",
        "generate:json-schemas": "generateSchemas.sh",
        "test:smoke": "npx cypress run"
    },
    "dependencies": {
        "@dxworks/illustrytypes": "^0.0.2",
        "@types/axios": "^0.14.0",
        "@types/bluebird": "^3.5.36",
        "@types/lodash": "^4.14.171",
        "@types/moment": "^2.13.0",
        "@types/mongodb": "^4.0.7",
        "@types/swagger-jsdoc": "^6.0.1",
        "ajv": "^8.10.0",
        "axios": "^0.26.1",
        "bluebird": "^3.7.2",
        "body-parser": "^1.19.0",
        "cors": "^2.8.5",
        "express": "^4.17.1",
        "express-mongo-sanitize": "^2.2.0",
        "formidable": "^1.2.2",
        "json-2-csv": "^3.14.1",
        "json2csv": "^5.0.6",
        "lodash": "^4.17.21",
        "moment": "^2.29.1",
        "mongodb": "^4.1.2",
        "mongoose": "^5.13.2",
        "morgan": "^1.10.0",
        "multer": "^1.4.2",
        "quicktype": "^15.0.260",
        "quicktype-core": "^6.0.70",
        "swagger-jsdoc": "^6.1.0",
        "swagger-ui-express": "^4.3.0",
        "tsoa": "^3.14.1",
        "typescript-json-schema": "^0.53.0",
        "url": "^0.11.0",
        "yamljs": "^0.3.0"
    },
    "devDependencies": {
        "@cucumber/cucumber": "^8.1.2",
        "@cucumber/pretty-formatter": "^1.0.0-alpha.2",
        "@types/cucumber": "^6.0.1",
        "@types/express": "^4.17.13",
        "@types/formidable": "^1.2.3",
        "@types/morgan": "^1.9.3",
        "@types/swagger-ui-express": "^4.1.3",
        "concurrently": "^7.0.0",
        "copyfiles": "^2.4.1",
        "cucumber": "^6.0.5",
        "cucumber-junit-formatter": "^0.2.2",
        "cucumber-pretty": "^6.0.1",
        "cypress": "^9.6.0",
        "cypress-file-upload": "^5.0.8",
        "json": "^11.0.0",
        "nodemon": "^2.0.15",
        "rimraf": "^3.0.2",
        "ts-node": "^10.5.0",
        "tslint": "^6.1.3",
        "typescript": "^4.3.5"
    }
}
